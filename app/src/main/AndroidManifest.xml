<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Essential permissions only -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- This permission is required only for the notification listener service -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" 
        tools:ignore="ProtectedPermissions" />
    
    <!-- Optional storage permission for app data -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" 
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/notifications"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/notifications_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotificationSaver"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">
        <activity
            android:name=".ui.screens.MainActivity"
            android:exported="false" />

        <service
            android:name=".NotificationListener"
            android:exported="false"
            android:label="Notification Access"
            android:description="@string/permission_notification_description"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
            <meta-data
                android:name="android.service.notification.default_filter_types"
                android:value="conversations|alerting|silent" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.mpm.notificationsaver.SAVE_NOTIFICATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>